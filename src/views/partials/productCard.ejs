
<% productosCloset.forEach(product => { %>
   <div class="products-card" id="productsCard">

      <div class="product-card-info">

         <a href="/products/<%= product.id %>/productDetail">
            <img src="/images/productos/<%= product.images[0].file %>"  alt="'<%= product.nameProduct %>'">
         </a>
         <h3 class=".title-products"><%= product.nameProduct %></h3>
         <p><span class="info">Estado: </span><%= product.condition %></p>
         <p class="price" id="price">$<%= product.price %></p>
      
         <div class="detail-btn-cart-container">
            <button id="addCart">
               <i class="fa-solid fa-cart-shopping"></i> Agregar
            </button>
            <p id="msgCart" class="add-cart-msg">Se agreg√≥ al carrito</p>
         </div>
      
         <%-include("../partials/addCart.ejs")%>
      
      </div>
      
   </div>
<%  }); %>