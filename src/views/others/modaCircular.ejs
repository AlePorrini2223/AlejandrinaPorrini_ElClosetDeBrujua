   <!-- Carrusel personalizado -->
   <div class="carousel-container">
      <div class="carousel">
         <div class="carousel-item active">
         <img src="/images/imagen1.jpg" class="carousel-img" alt="Moda Circular 1">
         </div>
         <div class="carousel-item">
         <img src="/images/imagen2.jpg" class="carousel-img" alt="Moda Circular 2">
         </div>
         <div class="carousel-item">
         <img src="/images/imagen3.jpg" class="carousel-img" alt="Moda Circular 3">
         </div>
      </div>
      <button class="carousel-prev" onclick="moveCarousel(-1)">&#10094;</button>
      <button class="carousel-next" onclick="moveCarousel(1)">&#10095;</button>
   </div>

